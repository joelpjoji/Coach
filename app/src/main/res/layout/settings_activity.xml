<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="45dp"
        android:fontFamily="@font/calibri"
        android:gravity="left"
        android:layout_below="@id/toolbar"
        android:paddingLeft="10dp"
        android:paddingBottom="0dp"
        android:elevation="4dp"
        tools:ignore="NotSibling" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/acc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ACCOUNT"
                android:textColor="@color/Black"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signed in as: bh***********@gmail.com"
                android:textSize="13dp"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/phone"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Mobile number"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneNumber"
                    android:layout_toRightOf="@id/phone"
                    android:text="+91 98*******2"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/paymethIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account_balance_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/paymeth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/paymethIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Payment methods"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paymeth"
                    android:layout_toRightOf="@id/paymethIcon"
                    android:text="Union Bank od India 9**5"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/langIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_language_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/langIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Languages"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lang"
                    android:layout_toRightOf="@id/langIcon"
                    android:text="English"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0"/>

            <TextView
                android:id="@+id/pri_sec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PRIVACY &amp; SECURITY"
                android:textColor="@color/Black"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/priIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_security_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/priIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Privacy"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pri"
                    android:layout_toRightOf="@id/priIcon"
                    android:text="Sharing and visibility"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/notificIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notifications_none_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/notific"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/notificIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Notifications"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notific"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/notificIcon"
                    android:text="Turn notifications on/off"
                    android:textSize="13dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/secIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/secIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Security"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sec"
                    android:layout_toRightOf="@id/secIcon"
                    android:text="Google PIN"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple1">

                <ImageView
                    android:id="@+id/LOIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/LO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/LOIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Log out"
                    android:textSize="17dp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LO"
                    android:layout_toRightOf="@id/LOIcon"
                    android:text="Log out from Coach"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>